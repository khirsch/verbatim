<nav class="breadcrumb">
  {{#link-to 'index'}}<span class="breadcrumb-item">Home</span>{{/link-to}} >
  {{#link-to book.genre.name}}<span class="breadcrumb-item">{{genre}}</span>{{/link-to}} >
  <span class="breadcrumb-item active">{{book.title}}</span>
</nav>

<div class="row">
  <div class="col-sm-4">
    <img class="img-responsive" src={{book.image}} alt={{book.title}}>
  </div>
  <div class="col-sm-6">
    <p>
      <h4>{{book.title}}</h4>
      <span>By {{book.author}}</span>
      <h5>${{book.price}}.00</h5>
      <button class="btn" {{action 'addToCart' book}}>Add to Cart</button>
    </p>
    <br>
    <p class="details">
      <h6>Pages: {{book.pages}}</h6>
      <h6>ISBN: {{book.isbn}}</h6>
      <h6>Publisher: {{book.publisher}}</h6>
      <h6>Date: {{book.date}}</h6>
    </p>
  </div>
</div>
<div id="synopsis" class="row">
  <p>
    <h4>Synopsis</h4>
    {{book.synopsis}}
  </p>
</div>
